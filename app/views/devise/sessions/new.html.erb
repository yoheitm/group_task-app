<div class="container">
  <h1>ログイン</h1>
  <div class=flame-form>
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_account', local: true do |f| %>
    <div class='error-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="field">
      <div class='field-label'>
        <%= f.label :メールアドレス %>
      </div>
      <div class='field-input'>
        <%= f.email_field :email, autofocus: true, class: 'text-area' %>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :パスワード %>
      </div>
      <div class='field-input'>
        <%= f.password_field :password, autocomplete: "off", class: 'text-area' %>
      </div>
    </div>
    <div class='actions'>
      <%= f.submit "ログイン", class: 'btn' %>
    </div>
  <% end %>
  </div>
<h4>アカウントを持っていますか？</h4>
<%= link_to "アカウントを作成",  new_user_registration_path, class: 'user-session-link'%>
</div>
