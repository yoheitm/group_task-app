<div class='shift-group-form'>
  <h1>新規グループ</h1>
  <div class="flame-form">
  <%=form_with model: @group, id: 'new_group', class: 'new_group',local: true do |f|%>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :グループ名, class: 'shift-group-label'%>
      </div>
      <div class='field-input'>
        <%= f.text_field :name, class: 'shift-group-name', placeholder: 'グループ名を入力してください'%>
      </div>
    </div>
    <div class='field'>
      <div class='shift-group-member'>
        <%= f.label :グループメンバー , class:'shift-group-label' %><br />
        <%= f.collection_check_boxes(:user_ids, User.all, :id, :name) %>
      </div>
    </div>  
    <div class='actions'>
      <%= f.submit '作成',class: 'btn'%>
    </div>
  <% end %>
  </div>
  <%= link_to "トップページへ戻る", root_path, class: 'page-back'%>
</div>
