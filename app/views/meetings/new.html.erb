<div class='container'>
  <h1>イベントの登録</h1>
  <div class="flame-form">
  <%=form_with model: [@group, @meeting], id: 'new_group', class: 'new_group',local: true do |f|%>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :タイトル%>
      </div>
      <div class='field-input'>
        <%= f.text_field :title, class: 'text-area'%>
      </div>
    </div>
    <div class='field'>
      <div class='field-label'>
        <%= f.label :日時%>
      </div>
      <div class="time-field-input">
        <%= f.datetime_select :start_time, class: 'time'%>
      </div>
    </div>
    <div class="field">
      <div class="field-label">
        <%= f.label :詳細%>
      </div>
      <div class="field-input">
        <%= f.text_field :content, class: "text-area"%>
      </div>
    </div>
    <div class='actions'>
      <%= f.submit '登録',class: 'btn'%>
    </div>
  <% end %>
  </div>
  <%= link_to "戻る", group_meetings_path(@group), class: 'page-back'%>
</div>
