<div class="side-bar-header">
  <div class="header-user-info" id="lists">
    <div class="user-info-image">
      <% if current_user.image? %>
        <%= image_tag current_user.image.thumb50.url %>
      <% else %>
        <%= image_tag "/assets/default.png", :size => '30x30' %>
      <% end %>
    </div>
    <div class="user-info-name">
      <%= current_user.name %>
    </div>
    <ul class="user-info-lists hidden" id="pull-down">
        <li class="pull-down-list"><%= link_to 'ユーザー情報を編集', edit_user_registration_path, class: "user-info-bar"%></li>
        <li class="pull-down-list"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class: "user-info-bar"%></li>
    </ul>
  </div>
  <div class="create-room">
    <%= link_to 'グループを作成', new_group_path %>
  </div>
</div>

<div class="rooms">
  <div class="room">
    <div class="room-name">
      <a href="#">techroom1</a>
    </div>
  </div>
  <div class="room">
    <div class="room-name">
      <a href="#">techroom2</a>
    </div>
  </div>
</div>